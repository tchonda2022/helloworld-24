pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }    

    }
    environment {
    registry = '908561271654.dkr.ecr.us-east-1.amazonaws.com/jenkin_ecr'
    registryCredential = 'jenkins_ecr'
    dockerimage = ''
  }
    stages {
        stage('build') {
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/koami25/helloword-jan-2023.git'
            }
        }
        stage('Code Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
                sh 'mvn package'
                sleep 5
                sh 'mvn clean package'
            }
        }
        stage('test') {
        stage('Test') {
            steps {
                sh 'mvn test'
                sleep 5

            }
        }

        stage('Build Image') {
            steps {
                script{
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                } 
            }
        }
        stage('Deploy image') {
            steps{
                script{ 
                    docker.withRegistry("https://"+registry,"ecr:us-east-1:"+registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }  
    }
}                         
 
